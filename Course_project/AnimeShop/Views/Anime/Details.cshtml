@model Anime

@{ ViewData["Title"] = "Подробнее"; }

<h2>Подробннее о товаре</h2>

<div>
    <hr />
    @*<div class="img-thumbnail">
            <img src="@Model.ImageUrl" alt="Picture of @Model.Name">
        </div>*@
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>Изображение(Url)</dt>
        <dd>
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt>Товар недели</dt>
        <dd>
            @Html.DisplayFor(model => model.WeeklyProduct)
        </dd>
        <dt>Категория</dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
