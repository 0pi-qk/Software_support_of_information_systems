@model AnimeShop.Models.Reviews

@{ ViewData["Title"] = "Создать"; }

<h2>Создать отзыв</h2>

<form asp-action="CreateWithAnime">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label">Отзыв</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">Описание</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Grade" class="col-md-2 control-label">Оценка</label>
            <div class="col-md-10">
                <select asp-for="Grade" class="form-control" asp-items="ViewBag.Grade"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AnimeId" class="col-md-2 control-label">Товар</label>
            <div class="col-md-10">
                <select asp-for="AnimeId" class="form-control" asp-items="ViewBag.AnimeId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Созадть" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="AnimeReviews" asp-route-AnimeId="@Model.AnimeId">Вернуться в отзывам о товаре</a>
</div>
