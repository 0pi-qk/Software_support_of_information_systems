        <option value="Grade">Оценка</option>
        <option value="Title">Отзыв</option>
        <option value="Anime Name">Товар</option>
    </select>
</div>
<br />

<div id="outputResult">

</div>

<div id="defaultResult">
    @Html.Partial("ListAllReviewsPartial", Model)
</div>

@section Scripts
{
    <script src="~/js/Reviews.js"></script>
}

