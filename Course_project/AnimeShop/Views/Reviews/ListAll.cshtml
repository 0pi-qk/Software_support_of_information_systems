@model IEnumerable<Reviews>

@{
    var ModelName = "Все отзывы";
    ViewData["Title"] = ModelName;
}

<h2>Все отзывы</h2>
<h4 id="currentlySortedBy">Сортировка: </h4>

<div>
    <select id="SelectOptionInput" onchange="ListSortedReviewsScript()">
