@model IEnumerable<Anime>

<div class="row carousel-holder" align="center">
    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                @foreach (var Anime in Model)
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@Anime.Id"></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="https://i.pinimg.com/originals/6a/61/9a/6a619a27a15ddf6b4087470a6823bfa9.jpg" alt="Home page picture">
                </div>
                @foreach (var Anime in Model)
                {
                <div class="item">
                    <div class="text-center"><b>@Anime.Name</b></div>
                    <a asp-controller="Anime" asp-action="DisplayDetails" asp-route-id="@Anime.Id"> 
                        <img class="slide-image" src="@Anime.ImageUrl" alt="Picture of @Anime.Name">
                    </a>
                </div>
                }
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>
